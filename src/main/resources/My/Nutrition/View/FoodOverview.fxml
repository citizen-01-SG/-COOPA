<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="My.Nutrition.View.FoodOverviewController">
    <children>
        <SplitPane dividerPositions="0.35" layoutX="200.0" layoutY="70.0" prefHeight="300.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <items>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <TableView fx:id="foodTable" layoutX="-28.0" layoutY="-35.0" prefHeight="300.0" prefWidth="202.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <columns>
                                <TableColumn fx:id="foodNameColumn" prefWidth="75.0" text="Food Name" />
                                <TableColumn fx:id="caloriesColumn" prefWidth="75.0" text="Calories" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </AnchorPane>

                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="329.0" prefWidth="416.0" styleClass="background">
                    <children>
                        <Label layoutX="10.0" layoutY="10.0" styleClass="label-header" text="Nutrition Info" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="5.0" />

                        <ImageView fx:id="foodImageView" fitHeight="150.0" fitWidth="200.0" layoutX="280.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0" />

                        <GridPane layoutX="5.0" layoutY="180.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="160.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label text="Food Name" />
                                <Label text="Calories" GridPane.rowIndex="1" />
                                <Label text="Protein (g)" GridPane.rowIndex="2" />
                                <Label text="Carbohydrates (g)" GridPane.rowIndex="3" />
                                <Label text="Total Fats (g)" GridPane.rowIndex="4" />
                                <Label text="Sugar (g)" GridPane.rowIndex="5" />
                                <Label text="Salt (g)" GridPane.rowIndex="6" />

                                <Label fx:id="nameLabel" styleClass="label-bright" text="Label" GridPane.columnIndex="1" />
                                <Label fx:id="caloriesLabel" styleClass="label-bright" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Label fx:id="proteinLabel" styleClass="label-bright" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <Label fx:id="carbsLabel" styleClass="label-bright" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                <Label fx:id="fatLabel" styleClass="label-bright" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                <Label fx:id="sugarLabel" styleClass="label-bright" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                                <Label fx:id="saltLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                            </children>
                        </GridPane>

                        <ButtonBar layoutX="76.0" layoutY="244.0" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0">
                            <buttons>
                                <Button mnemonicParsing="false" onAction="#handleNewFood" text="New" />
                                <Button mnemonicParsing="false" onAction="#handleEditFood" text="Edit" />
                                <Button mnemonicParsing="false" onAction="#handleDeleteFood" text="Delete" />
                            </buttons>
                        </ButtonBar>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</AnchorPane>