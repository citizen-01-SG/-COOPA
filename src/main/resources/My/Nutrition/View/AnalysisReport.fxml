<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="650.0" prefWidth="1000.0" styleClass="main-background" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1" fx:controller="My.Nutrition.View.AnalysisReportController">
    <children>
        <Label layoutX="30.0" layoutY="20.0" styleClass="app-title" text="ANALYSIS REPORT" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="20.0" />

        <Button layoutX="900.0" layoutY="20.0" mnemonicParsing="false" onAction="#handleBack" styleClass="action-btn" text="HOME / DASHBOARD" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="20.0" />

        <VBox alignment="CENTER" layoutX="50.0" layoutY="80.0" spacing="20.0" styleClass="card-pane" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="80.0">
            <children>
                <Label styleClass="section-header" text="Calorie Comparison" />

                <BarChart fx:id="barChart" legendVisible="false" prefHeight="450.0" prefWidth="800.0" style="-fx-text-fill: white;">
                    <xAxis>
                        <CategoryAxis label="Food Item" side="BOTTOM" tickLabelFill="WHITE" fx:id="xAxis" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Calories (KCal)" side="LEFT" tickLabelFill="WHITE" />
                    </yAxis>
                </BarChart>
            </children>
        </VBox>
    </children>
</AnchorPane>